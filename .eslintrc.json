{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jest": true
	},
	"extends": "airbnb",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"import"
	],
	"rules": {
		"indent": [
			"error",
			2
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"semi": [
			"error",
			"always"
		],
		"jsx-a11y/label-has-associated-control": [ "error", {
			"required": {
				"some": [ "nesting", "id" ]
			}
		}],
		"jsx-a11y/label-has-for": [ "error", {
			"required": {
				"some": [ "nesting", "id" ]
			}
		}]
	},
	"parser": "babel-eslint"
}